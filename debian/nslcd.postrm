#!/bin/sh

set -e

CONFFILE="/etc/nslcd.conf"
OCONFFILE="/etc/nss-ldapd.conf"

# remove /var/run/nslcd directory on remove
if [ "$1" = "remove" ]
then
  rm -rf /var/run/nslcd
fi

# remove our configuration file (not a conffile) on purge
if [ "$1" = "purge" ]
then
  rm -f "$CONFFILE" "$OCONFFILE"
fi

